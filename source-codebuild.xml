version: 0.2

phases:
  pre_build:
    commands:
      - aws --version
  build:
    commands:
      - cd backend
      - zip -r stg-imfreev2-cms.zip .
  post_build:
    commands:
      - aws s3 cp stg-imfreev2-cms.zip s3://stg-imfreev2-cms-codebuild2/
      - echo "commit:" + $CODEBUILD_RESOLVED_SOURCE_VERSION
